<header>
  {{#if loggedIn}}
  {{> private-navbar}}
  {{else}}
  {{> public-navbar}}
  {{/if}}
</header>

<main class="container">
  <div class="card m-3">
    <div class="card-body">
      <h2 class="card-title text-center mb-4"><strong>{{title}}</strong></h2>
      <h6 class="card-subtitle text-center mb-3 text-muted">Posted by: {{user.first_name}} {{user.last_name}}</h6>
      <p class="card-text mb-5">
        {{content}}
      </p>
      <div class="d-flex justify-content-between flex-row">
        <h6 class="card-subtitle text-center mb-2 text-muted">Created at: {{createdAt}}</h6>
        <h6 class="card-subtitle text-center mb-2 text-muted">Last Update: {{updatedAt}}</h6>
      </div>
      <p>
        <div class="d-flex justify-content-end"> 
          <button
            class="btn btn-link"
            type="button" 
            data-bs-toggle="collapse"
            data-bs-target="#collapseExample"
            aria-expanded="false"
            aria-controls="collapseExample"
          >
          Comments
          </button>
        </div>
      </p>
      <div class="collapse" id="collapseExample">
        {{#each comments}}
        {{> comments-card}}
        {{/each}}
      </div>
    </div>
  </div>
  <hr />
  {{#if loggedIn}}
  {{> add-comment}}
  {{else}}
  {{/if}}
</main>